*******DOMda.html********

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .a{
            color: red;
        }
        .b{
            color: green;
        }
        .d{
            color: blue;
        }
    </style>
</head>
<body>
    <!-- <h1 class="a">Kiran</h1>
    <h1 class="b">Ravi</h1>
    <h1 class="a">Mahesh</h1>
    <h1 class="b">Manoj</h1>
    <h1 class="d">Ramya</h1>
    <h1 class="d">Kavya</h1> -->

    <!-- Kiran and Mahesh = red 
     Ravi and Manoj = green
     Ramya and Kavya = blue -->


     <h1 id="aa">Kiran</h1>
     <h1 id="b">Ravi</h1>
     <h1 id="a">Mahesh</h1>
     <h1 id="bb">Manoj</h1>
     <h1 id="dd">Ramya</h1>
     <h1 id="d">Kavya</h1>

     <script>
        let x=document.getElementById(a)
        console.log(x);
     </script>
</body>
</html>
